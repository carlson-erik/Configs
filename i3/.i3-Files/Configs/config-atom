client.urgent                  #151515 #151515 #d2d1a6
client.background              #151515

new_window pixel 0
#======== MODIFIED STUFF HERE ========#

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
    mode dock
    font pango: Inconsolata 10
    workspace_buttons yes
    status_command i3blocks -c ~/.i3/i3blocks.conf
    colors {
      background #151515
      statusline #d2d1a6
      focused_workspace    #151515 #151515 #d2d1a6
      active_workspace     #151515 #151515 #d2d1a6
      inactive_workspace   #151515 #151515 #d69f74
      urgent_workspace     #151515 #151515 #d2d1a6
      }
}


exec_always --no-startup-id nitrogen --restore
